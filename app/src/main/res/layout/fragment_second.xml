<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80CBC4"
    tools:context="my.awesome.silento.SecondFragment">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/carview_with_profile_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carview_with_buttons"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            card_view:cardBackgroundColor="#4DB6AC"
            card_view:cardCornerRadius="5dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp">

            <!--C8E6C9-->
            <TextView
                android:id="@+id/text_second_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Your search for an app that can save you from the embarrassment is now over."
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                />

        </android.support.v7.widget.CardView>




        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/img_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_second"
            android:scaleType="fitCenter"
            android:layout_below="@+id/carview_with_profile_types"/>


    </RelativeLayout>







</FrameLayout>
