<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.silento.HelpActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/about_silento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/about_silento_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@mipmap/down"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="About Silento!"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/about_silento_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="You don't need to go through the embarrassment of having your phone ringing at the wrong time anymore.\n\nSilento! can automatically enable or disable your mobile's silent/vibrate mode through a simple and friendly interface." />


                <!-- <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:text="Silento! can automatically enable or disable your mobile's silent/vibrate mode through a simple and friendly interface." />
 -->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#dedede" />

            <LinearLayout
                android:id="@+id/event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@mipmap/down"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Events"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- &lt;!&ndash;content to hide/show &ndash;&gt;-->


                <TextView
                    android:id="@+id/event_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Silento automatically silences your phone based on your weekly schedule.\n\nYou just have to create an event, give it a name , give it a time range , and select which days of the week you have the event . You also have to select the start and end profile type.\n\nYou will be notified every time the event occurs and your profile is changed.\n\nThat's all!"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#dedede" />


            <LinearLayout
                android:id="@+id/quick_silento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="visible">

