                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@mipmap/down"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Shake Silento!"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- &lt;!&ndash;content to hide/show &ndash;&gt;-->


                <TextView
                    android:id="@+id/shake_silento_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Shake Silento! allows you to change your profile just by Shaking your device.\n\nJust select your desired shake sensivity and set the profile you want when you shake you device\n\nWe also provide a quick and easy way to turn this feature off."
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#dedede" />


            <LinearLayout
                android:id="@+id/exceptions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/exceptions_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@mipmap/down"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Exceptions"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- &lt;!&ndash;content to hide/show &ndash;&gt;-->


                <TextView
                    android:id="@+id/exceptions_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Exceptions lets certain callers ring through even with your phone in silent/vibrate mode.\n\nAdd as many numbers as you want to the Exceptions list and they'll ring regardless of the phones ringer setting.\n\nWe also provide a quick and easy way to turn this feature off."
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#dedede" />


            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/settings_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@mipmap/down"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Feedback"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- &lt;!&ndash;content to hide/show &ndash;&gt;-->


                <TextView
                    android:id="@+id/settings_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Besides all these features, you still have a support team ready to assist you and listen your suggestions.\n\nJust go to Settings -> Feedback and send us your suggestions or questions and we will get in touch with you."
                    android:textSize="15sp" />

            </LinearLayout>




