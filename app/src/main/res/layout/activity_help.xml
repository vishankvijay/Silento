                    android:id="@+id/quick_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@mipmap/down"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Quick Silento!"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- &lt;!&ndash;content to hide/show &ndash;&gt;-->


                <TextView
                    android:id="@+id/quick_silento_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Events section will manage all of your daily schedule.\nBut what if something unscheduled comes up like meetings and movies??\n\nDon't worry we got you!\nYou can use the Quick Silento feature to silent/vibrate your device for whatever else might come up.\n\nJust set the time range and select the profile type you want for that time range and we will quickly manage your profile."
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#dedede" />


            <LinearLayout
                android:id="@+id/shake_silento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
