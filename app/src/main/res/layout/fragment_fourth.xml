<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80CBC4"
    tools:context="com.example.silento.FourthFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/carview_with_profile_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/carview_with_buttons"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            card_view:cardBackgroundColor="#4DB6AC"
            card_view:cardCornerRadius="5dp"
            android:layout_gravity="center|top"
            android:layout_margin="12dp">

            <!--C8E6C9-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="You can also add exceptions for important callers and never miss a call from your loved ones."
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>




        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_forth"
            android:scaleType="fitStart"
            android:layout_below="@+id/carview_with_profile_types"/>


    </RelativeLayout>







</FrameLayout>
