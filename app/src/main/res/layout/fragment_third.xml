<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.silento.ThirdFragment"
    android:background="#BCAAA4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="20dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:text="Silento automatically silences your phone based on your weekly schedule through a simple and friendly interface."/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/intro_third"
        android:layout_gravity="center" />




</FrameLayout>
