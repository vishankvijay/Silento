<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAB91"
    tools:context="my.awesome.silento.FirstFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/carview_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carview_with_buttons"
            android:layout_gravity="center|top"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="25dp"
            card_view:cardBackgroundColor="#FF8A65"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            card_view:cardCornerRadius="5dp">



            <!--C8E6C9-->



            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Silento! also provides you with the ability of changing your profile by just shaking your phone."
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                />





        </android.support.v7.widget.CardView>


        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/img_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carview_shake"
            android:scaleType="fitCenter"
            android:src="@drawable/intro_third"
            />


    </RelativeLayout>

</FrameLayout>
